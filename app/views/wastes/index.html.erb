<h2>無駄遣いを変更する</h2>

<table>
  <thead>
    <tr>
      <th>節約したいもの</th>
      <th>金額</th>
      <th>理由</th>
      <th>更新する</th>
    </tr>
  </thead>
  <tbody>
    <% @user.wastes.each do |waste| %>
    <%= form_with model: waste do |f| %>
    <tr>
      <td><%= f.text_field :name %></td>
      <td><%= f.text_field :price %></td>
      <td><%= f.text_field :reason %></td>
      <td><%= f.submit "更新" %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>



<h2>節約したいものを入力</h2>

<table>
  <thead>
    <tr>
      <th>節約したいもの</th>
      <th>１個／1回あたりの値段</th>
      <th>節約／辞めたい理由</th>
      <th>更新</th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model: @waste do |f| %>
    <tr>
      <td><%= f.text_field :name %></td>
      <td><%= f.text_field :price %></td>
      <td><%= f.text_field :reason %></td>
      <td><%= f.submit "追加する" %></td>
    </tr>
    <% end %>
  </tbody>
</table>




