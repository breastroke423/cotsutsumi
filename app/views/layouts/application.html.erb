<!DOCTYPE html>
<html>
<head>
  <title>こつつみ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta property="og:url"           content="https://cotsutsumi.work" />
  <meta property="og:type"          content="website" />
  <meta property="og:title"         content="こつつみ" />
  <meta property="og:description"   content="Your description" />
  <meta property="og:image"         content="https://www.your-domain.com/path/image.jpg" />
</head>

<body>



<!-- Facebook アイコン表示されるかのテスト用 -->
  <div id="fb-root"></div>
  <script async defer crossorigin="anonymous" src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v8.0" nonce="cnjnh5d7"></script>


  <div class="fb-share-button" data-href="https://cotsutsumi.work" data-layout="button" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fcotsutsumi.work%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">シェア</a></div>
<!-- Facebook アイコン表示されるかのテスト用 -->

  <div id="wrapper">
    <!-- /header -->
    <div class="head-group">
      <header>
        <div class="container">
          <div class="row">
            <nav  class="nav navbar-nav navbar-left">
              <div class="logo">
                <%= link_to root_path do %>
                <%= image_tag 'want_no_image.jpg', :size =>'90x65' %>
                <% end %>
              </div>
            </nav>
            <nav class="nav navbar-nav navbar-right">
              <li><%= link_to "About", homes_about_path, class: "btn btn-default" %></li>
              <% if user_signed_in? %>
              <li><%= link_to "マイページ", mypage_path, class: "btn btn-default" %></li>
              <li><%= link_to "ユーザー一覧", users_path, class: "btn btn-default" %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-default" %></li>
              <% else %>
              <li><%= link_to "ユーザー一覧", users_path, class: "btn btn-default" %></li>
              <li><%= link_to "私もガマンする／新規登録", new_user_registration_path, class: "btn btn-default" %></li>
              <li><%= link_to "今日のガマン入力／ログイン", new_user_session_path, class: "btn btn-default" %></li>
              <% end %>
            </nav>
          </div>
        </div>
      </header>
      <div class="container">
        <div class="row">
          <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
          <script src="https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
          <%= render "layouts/share_btn" %>
        </div>
      </div>
    </div>
    <!-- /header -->

    <% if flash[:thanks] %>
    <div class="container">
      <div class="row">
        <div class="thanks top-base">
          <%= flash[:thanks] %>
        </div>
      </div>
    </div>
    <% end %>

    <%= yield %>

    <footer>
      <div>
        <p>CopyRight Cotsutsumi</p>
      </div>
    </footer>
  </div>
</body>
</html>
