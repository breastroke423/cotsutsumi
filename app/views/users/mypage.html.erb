<h2>マイページ</h2>


<h3>Total</h3>
<!-- 合計額書く -->


<!-- <h3>継続日数</h3>　カレンダー機能の時に -->
<table>
  <thead>
    <tr>
      <th>内訳</th>
    </tr>
  </thead>
  <tbody>
    <% @user.wastes.each do |waste| %>
    <tr>
      <td><%= waste.name %></td>
      <td>合計額　円</td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>本日のガマン</th>
    </tr>
  </thead>
  <tbody>
    <% @user.wastes.each do |waste| %>
    <tr>
      <td><%= waste.name %></td>
      <td><%= waste.price %>円</td>
      <td>ガマンできた！<!-- btn updateする　count+1 --></td>
      <td>使っちゃった…。<!-- btn destroy? --></td>
      <td><%= link_to "過去のガマンを書く", edit_waste_path(waste) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "買いたかったものを買う！" %>

<table>
  <thead>
    <tr>
      <th>欲しい目標</th>
    </tr>
  </thead>
  <tbody>
    <% @user.wants.each do |want| %>
    <tr>
      <td><%= want.name %></td>
      <td><%= want.price %>円</td>
      <td><%= want.reason %></td>
      <td><%= link_to "目標を変更する", edit_want_path(want) %></td>
    </tr>
    <% end %>
  </tbody>
</table>