<h2>マイページ</h2>


<h3>Total</h3>
<!-- 合計額書く -->


<!-- <h3>継続日数</h3>　カレンダー機能の時に -->
<table>
  <thead>
    <tr>
      <th>内訳</th>
    </tr>
  </thead>
  <tbody>
    <% @user.wastes.each do |waste| %>
    <tr>
      <td><%= waste.name %></td>
      <td>合計額<%#= waste.price * waste.count %>円</td>
      <td><%= link_to "無駄遣いを変更する", edit_waste_path(waste) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>本日のガマン</th>
    </tr>
  </thead>
  <tbody>
    <% @user.wastes.each do |waste| %>
    <tr>
      <td><%= waste.name %></td>
      <td><%= waste.price %>円</td>
      <td>
        <%= form_with model: waste, url: wastes_count_up_path do |f| %>
        <%= f.submit "ガマンできた！" %>
        <% end %>
      </td>
      <td>
        <%= form_with model: waste, url: wastes_count_down_path do |f| %>
        <%= f.submit "使っちゃった…。" %>
        <% end %>
      </td>
      <td><%= link_to "過去のガマンを書く", edit_waste_path(waste) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "買いたかったものを買う！" %>

<table>
  <thead>
    <tr>
      <th>欲しい目標</th>
    </tr>
  </thead>
  <tbody>
    <% @user.wants.each do |want| %>
    <tr>
      <td><%= want.name %></td>
      <td><%= want.price %>円</td>
      <td><%= want.reason %></td>
    </tr>
    <% end %>
  </tbody>
      <%= link_to "目標を一覧を見る／変更する", wants_path %>

</table>