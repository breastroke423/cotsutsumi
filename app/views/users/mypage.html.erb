<div class="container">
      <div class="profile">
  <div class="row align-middle">
      <!-- プロフィールの名前と画像表示 -->
      <div class="col-xs-3">
        <div class="profile-image">
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %><br>
          <p><%= current_user.nickname %></p>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="intro">
          <p><%= current_user.introduction %></p>
        </div>
      </div>
      <!-- プロフィールのフォロー表示 -->
      <div class="col-xs-5">
        <div class="follow">
          <div>
            <a><%= link_to user_follows_path(current_user.id) do %>
              <%= @user.followings.count %><br>
              フォロー
              <% end %></a>
              <a><%= link_to user_followers_path(current_user.id) do %>
                <%= @user.followers.count %><br>
                フォロワー
                <% end %></a>
              </div>
              <div>
               <%= link_to "プロフィール変更", edit_user_path(current_user) %>
             </div>
           </div>
         </div>
       </div>
     </div>

     <!-- 無駄遣いを管理するテーブル、ボタンと合計額、グラフを表示する部分テンプレート -->
     <div id="count">
      <%= render partial: 'wastes/count', locals: { user_total_price: @user_total_price, user_difference_price: @user_difference_price, users_wastes_all: @users_wastes_all, users_purchase_all: @users_purchase_all, user: @user,waste_count_all: @waste_count_all } %>
    </div>

    <!-- 遷移ボタン -->
    <div class="row index-btn">
      <%= link_to "目標変更", wants_path, class: "btn btn-default" %>
    </div>
  </div>