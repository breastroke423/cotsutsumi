<h2>目標を変更する</h2>
<% @wants.each do |want| %>
買いたいもの<%= attachment_image_tag want, :want_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
<%= form_with model: want do |f| %>

<%= f.attachment_field :want_image %>
<%= f.text_field :name %>
<%= f.text_field :price %>
<%= f.text_field :reason %>
<%= f.submit "←を更新する" %>
<%= link_to "目標から削除する", want_path(want), method: :delete %>
<% end %>
<% end %>

<h2>欲しいものを追加する</h2>

<%= form_with model: @want do |f| %>
  <%= f.attachment_field :want_image %>
  <%= f.label :欲しいもの %>
  <%= f.text_field :name %>
  <%= f.label :ものの値段 %>
  <%= f.text_field :price %>
  <%= f.label :欲しい理由 %>
  <%= f.text_field :reason %>
  <%= f.submit "追加する" %>
  <!-- 将来、続けて登録する、と、無駄遣いを入力する、に分けてボタンを付けたい -->
<% end %>

<%= link_to "無駄遣いを入力／変更する", wastes_path %>
