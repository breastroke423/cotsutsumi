<!-- 応援ボタン cheer -->
<% if want.cheered_by?(current_user) %>
  <%= link_to want_cheers_path(want), method: :delete, remote: true do %>
<i class="fa fa-child" aria-hidden="true" style="color:red;"></i>
      <%= want.cheers.count %>人が応援中
  <% end %>
<% else %>
  <%= link_to want_cheers_path(want), method: :post, remote: true do %>
<i class="fa fa-child" style="color:lightgray"></i>
    <%= want.cheers.count %>人が応援中
  <% end %>
<% end %>

