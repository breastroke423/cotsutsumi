
<div class="container">
<div class="form-signin">

<div class="user-info">
  <h2>こちらから登録！</h2>
  <div class="row">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネーム" %>
  </div>


  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>

  <div class="form-group">

    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード (#{ @minimum_password_length }文字以上)" %>
        <% if @minimum_password_length %>
    <% end %><br />
  </div>

  <div class="form-group">

    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再確認" %>
  </div>

  <div class="form-group">
    <%= f.label :意気込み %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>


  <div>
    <%= f.submit "続いて欲しいものを入力！", class: "btn btn-default" %>
  </div>
<% end %>
  </div>
</div>

<%= flash[:error] %>

    </div>
</div>
